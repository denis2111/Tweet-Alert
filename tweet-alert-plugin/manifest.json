{
  "manifest_version": 3,

  "name": "Tweet Alert",
  "description": "Identify and classify disaster tweets",
  "version": "1.0",
  "content_scripts": [{
    "js": ["home.js"],
    "matches": ["https://twitter.com/*"]
  }],
  "host_permissions": [
    "http://localhost/*"
  ],
  "permissions": [
    "storage", 
    "activeTab", 
    "scripting"
  ],
  "action": {
    "default_icon": {
      "16": "/images/get_started16.png",
      "32": "/images/get_started32.png",
      "48": "/images/get_started48.png",
      "128": "/images/get_started128.png"
    }
  },
  "icons": {
    "16": "/images/get_started16.png",
    "32": "/images/get_started32.png",
    "48": "/images/get_started48.png",
    "128": "/images/get_started128.png"
  }
}
